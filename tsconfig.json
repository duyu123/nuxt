{
  "compilerOptions": {
    "jsx": "preserve",
    "experimentalDecorators": true,
    // "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitThis": false,
    "noImplicitAny": false, // 是否在表达式和声明上有隐含的any类型时报错
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types" // 新增
    ]
  },
  "include": [
    "./*.ts",
    "./*.tsx",
    "**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "plugins/*",
    "assets/*",
    "static/font/*",
  ]
}
